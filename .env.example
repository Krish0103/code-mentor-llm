# ================================
# CodeMentor LLM Configuration
# ================================

# Server Configuration
PORT=3000
NODE_ENV=development

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M
# Alternative: OLLAMA_MODEL=mistral:7b-instruct-v0.2-q4_K_M

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss.index
EMBEDDINGS_PATH=./data/embeddings.json
DATASET_PATH=./data/dsa_problems.json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Interview Mode
INTERVIEW_MODE_KEYWORD=interview mode
MAX_GUIDED_QUESTIONS=3
