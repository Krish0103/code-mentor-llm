{
  "name": "code-mentor-llm",
  "version": "1.0.0",
  "description": "DSA-focused LLM Interview Trainer with RAG support",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "dev:client": "cd client && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build:client": "cd client && npm run build",
    "build:embeddings": "node scripts/buildEmbeddings.js",
    "build:index": "node scripts/buildFaissIndex.js",
    "build": "npm run build:client",
    "setup": "npm run build:embeddings && npm run build:index",
    "install:client": "cd client && npm install",
    "install:all": "npm install && npm run install:client",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint server/**/*.js"
  },
  "keywords": [
    "llm",
    "dsa",
    "interview",
    "rag",
    "faiss",
    "ollama"
  ],
  "author": "CodeMentor Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "faiss-node": "^0.5.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
